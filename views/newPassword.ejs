<%- include ('./includes/header.ejs') %>
  <body>
    <div class="contaner">
      <div class="login-dash">
        <div class="top-login">
          <div class="top-left">
            <div class="top-image-holder">
              <img src="/images/eia_logo.png" alt="" />
            </div>
          </div>
          <div class="top-right">
            <h1><span>Always</span> Be With You</h1>
          </div>
        </div>
        <div class="main-login-section">
          <div class="left-login">
            <h1 class="welcome-title">Reset Password</h1>
          </div>
          <div class="right-login">
            <h4 class="login">Ensure your password is 6-8 characters long</h4>
            <div class="login-inputs">
              <form action="/newPassword" method="post" class="form-action">
                <div class="form-contents">
                  <div class="input-holder">
                    <label for="email_login" class="login-label">Password</label>
                    <input
                      type="password"
                      placeholder="Email"
                      required
                      id="email_login"
                      name="password"
                      class="input-space"
                    />
                  </div>
                  <div class="input-holder">
                    <label for="pass_login" class="login-label">Confirm Password</label>
                    <input
                      type="password" 
                      placeholder="Password"
                      required
                      id="pass_login"
                      name="confirm"
                      class="input-space"
                    />
                    <input type="hidden" name="userId" value="<%= userId %>" />
                    <input
                      type="hidden"
                      name="passwordToken"
                      value="<%= passwordToken %>"
                    />
                  </div>
                  <div class="button-holder">
                    <button name="" class="btn login">Update</button>
                    <a href="/"  style="margin-left:4em"> Back to Home page</a>
                    <br>
                    <% if (passwordError) {%>
                        <h3 style="color: red;"><%= passwordError %></h3>
          
                        <%}%>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
