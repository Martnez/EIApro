<%- include ('./includes/header.ejs') %>
  <body>
    <div class="contaner">
      <div class="login-dash">
        <div class="top-login">
          <div class="top-left">
            <div class="top-image-holder">
              <img src="/images/eia_logo.png" alt="" />
            </div>
          </div>
          <div class="top-right">
            <h1><span>Always</span> Be With You</h1>
          </div>
        </div>
        <div class="main-login-section">
          <div class="left-login">
            <h1 class="welcome-title">Reset Password</h1>
          </div>
          <div class="right-login">
            <h4 class="login">enter your username or email</h4>
            <div class="login-inputs">
              <form action="/reset" method="post" class="form-action">
                <div class="form-contents">
                  <div class="input-holder">
                    <label for="email_login" class="login-label">Email</label>
                    <input
                      type="email"
                      placeholder="Email"
                      required
                      id="email_login"
                      name="email"
                      class="input-space"
                    />
                  </div>
                  <div class="button-holder">
                    <button name="" class="btn login">Submit</button>
                  </div>
                  <h4><a href="/">Back to Login page</a></h4>
                  <br>
                  
                  <% if (errorMessage) {%>
                    <h3> <%= errorMessage%></h3> 
                <%}%>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
